{
    "manifest_version": 2,
    "name": "Better COVID-19",
    "version": "0.3.1",
    "description": "Makes the word 'COVID-19' look extra special.\nSometimes the extension doesn't work, And doesn't change all the text",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["script.js"],
            "css": ["styles.css"]
        }
    ],
    "icons": { 
        "128": "icon128.png" 
    },
    "browser_action": {
        "default_icon": "icon128.png",
        "default_popup": "popup.html"
    }
}
